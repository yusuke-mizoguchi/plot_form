<div class="container pt-3">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1 class="float-left mb-5"><%= 'プロフィール' %></h1>
      <%= link_to '編集', edit_user_path, class: "btn btn-success pull-right" %>
      <table class="table">
        <tr>
          <th scope="row"><%= 'メールアドレス' %></th>
          <td><%= current_user.email %></td>
        </tr>
        <tr>
          <th scope="row"><%= '名前' %></th>
          <td><%= current_user.name %></td>
        </tr>
        <tr>
          <th scope="row"><%= '自己紹介' %></th>
          <td><%= current_user.profile %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
